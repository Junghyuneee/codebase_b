<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codebase.backend.post.mapper.PostMapper">

    <!-- 게시글 생성 -->
   <insert id="insertPost" parameterType="com.codebase.backend.post.dto.PostDTO">
    INSERT INTO post (topic, title, content, author, views) VALUES (#{topic}, #{title}, #{content}, #{author}, 0)
   </insert>


    <!-- 모든 게시글 조회 -->
    <select id="selectAllPosts" resultType="com.codebase.backend.post.dto.PostDTO">
        SELECT * FROM post
    </select>

    <!-- 특정 게시글 조회 -->
    <select id="selectPostById" parameterType="long" resultType="com.codebase.backend.post.dto.PostDTO">
        SELECT * FROM post WHERE id = #{id}
    </select>
    
    <!-- 게시글 조회수 증가 -->
    <update id="increaseViews" parameterType="long">
        UPDATE post SET views = views + 1 WHERE id = #{id}
    </update>
    
    <!-- 게시글 삭제 -->
    <delete id="deletePost" parameterType="long">
        DELETE FROM post WHERE id = #{id}
    </delete>
    
    <!-- 게시글 수정 -->
    <update id="updatePost" parameterType="com.codebase.backend.post.dto.PostDTO">
        UPDATE post 
        SET topic = #{topic}, title = #{title}, content = #{content} 
        WHERE id = #{id}
    </update>


	<!-- 좋아요 수 증가 -->
	<update id="increaseLikeCount" parameterType="long">
		UPDATE post SET likeCount = likeCount + 1 WHERE id = #{id}
	</update>


	<!-- 싫어요 수 증가 -->
	<update id="increaseDislikeCount" parameterType="long">
		UPDATE post SET dislikeCount = dislikeCount + 1 WHERE id = #{id}
	</update>


    <!-- 인기게시글 차트를 위한 id, 제목, 조회수 select -->
    <select id="findPopularPosts" resultType="com.codebase.backend.admin.dto.PopularResponse">
        SELECT id, title, views AS hits FROM post
        ORDER BY views DESC, id DESC
        LIMIT 5;
    </select>

</mapper>
