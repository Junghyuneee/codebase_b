<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notification">
    <insert id="save" parameterType="notification">
        INSERT INTO notification(content, type, member, createdAt)
        values (#{content}, #{type}, #{member}, #{createdAt})
    </insert>

    <select id="findByMemberId" parameterType="int">
        SELECT *
        FROM notification
        WHERE member=#{member}
    </select>

    <update id="readNoti" parameterType="java.util.List">
        UPDATE notification
        SET isRead = TRUE
        WHERE id IN
        <foreach item="id" index="index" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <delete id="deleteById" parameterType="Long">
        DELETE
        FROM notification
        WHERE id = #{id}
    </delete>

</mapper>