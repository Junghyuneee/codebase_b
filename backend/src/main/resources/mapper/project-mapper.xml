<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codebase.backend.project.mapper.ProjectMapper">

	<!-- 앞쪽 묶음이 테이블 컬럼, 뒤쪽 묶음 DTO필드 -->
	<insert id="insertProject" parameterType="com.codebase.backend.project.dto.Project">
		INSERT INTO project (title, content, price, hit, link, img, types, username, maker_id) 
		VALUES (#{title},#{content},#{price},#{hit},#{link},#{img},#{types},#{username},#{maker_id});
	</insert>

	<select id="selectAllProject" resultType="com.codebase.backend.project.dto.Project">
		SELECT * FROM project;
	</select>
	
	<select id="findById" resultType="com.codebase.backend.project.dto.Project">
		SELECT * FROM project 
		WHERE id = #{id};
	</select>
	
	<delete id="deleteProjectById" parameterType="int">
		DELETE FROM project WHERE id = #{id};
	</delete>




</mapper>